const myConfig = {
    user: "nes.zon36",
    host: "gmail.com",
    phone: "+226 07 85 71 89",
    // LIEN WHATSAPP POUR LE PAIEMENT (MÃ‰THODE DIRECTE)
    orangeLink: "https://wa.me.",
    shareText: "Regarde le site officiel de Abdoulk Diodoi ! ðŸ”¥ "
};

/* --- AFFICHAGE SÃ‰CURISÃ‰ --- */
window.onload = () => {
    const fullEmail = myConfig.user + "@" + myConfig.host;
    const emailElement = document.getElementById('mon-email');
    const telElement = document.getElementById('mon-tel');

    if(emailElement) {
        emailElement.innerHTML = `<a href="mailto:${fullEmail}" style="color:#e91e63; font-weight:bold; text-decoration:none;">${fullEmail}</a>`;
    }
    if(telElement) {
        telElement.innerHTML = `<a href="tel:${myConfig.phone.replace(/\s/g, '')}" style="color:#e91e63; font-weight:bold; text-decoration:none;">${myConfig.phone}</a>`;
    }
};

/* --- FONCTION PAIEMENT (Redirige vers ton WhatsApp) --- */
function payerOrange() {
    if(confirm("Voulez-vous contacter Abdoulk pour rÃ©gler par Orange Money ?")) {
        window.location.href = myConfig.orangeLink;
    }
}

/* --- VIRALITÃ‰ WHATSAPP --- */
function partagerWA() {
    const currentUrl = window.location.href;
    window.open(`https://api.whatsapp.com{encodeURIComponent(myConfig.shareText + currentUrl)}`, '_blank');
}

/* --- INSTALLATION APP (PWA) --- */
if ('serviceWorker' in navigator) {
    navigator.serviceWorker.register('sw.js');
}

// Invitation VIP automatique (15 sec)
setTimeout(() => {
    if(confirm("Rejoignez mon groupe VIP sur WhatsApp !")) {
        window.location.href = "https://wa.me";
    }
}, 15000);
